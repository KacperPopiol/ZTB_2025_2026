# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# EcoScoot Backend - Konfiguracja środowiska
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Port serwera Express
EXPRESS_PORT=5000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Redis Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password (opcjonalnie)

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AWS DynamoDB Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Dla lokalnego DynamoDB (opcjonalnie, np. DynamoDB Local)
# DYNAMODB_ENDPOINT=http://localhost:8000

# Nazwy tabel DynamoDB (opcjonalnie, domyślne wartości poniżej)
DYNAMODB_TABLE_USERS=EcoScoot_Users
DYNAMODB_TABLE_SCOOTERS=EcoScoot_Scooters
DYNAMODB_TABLE_RESERVATIONS=EcoScoot_Reservations
DYNAMODB_TABLE_RIDES=EcoScoot_Rides

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# JWT Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# WAŻNE: Zmień to na własny, bezpieczny klucz w produkcji!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Notatki
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
